<Window
    x:Class="SND_Vol.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:snd_vol="using:SND_Vol"
    mc:Ignorable="d"
    Activated="Window_Activated">

    <Grid x:Name="RootGrid" Background="{ThemeResource SolidBackgroundFillColorSecondary}" SizeChanged="Grid_SizeChanged">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition MinWidth="45" MaxWidth="45"/>
            </Grid.ColumnDefinitions>

            <!--<TextBlock 
                Text="{x:Bind Title}" 
                Style="{StaticResource CaptionTextBlockStyle}" 
                Opacity="0.6"
                VerticalAlignment="Center"
                Margin="10,0,0,0"/>-->
            <TextBlock 
                x:Name="MainEndpointNameTextBlock" 
                Style="{StaticResource CaptionTextBlockStyle}"
                Opacity="0.5"
                TextWrapping="Wrap"
                VerticalAlignment="Center"
                Margin="7,2,0,0"
                Grid.Column="0"/>
        </Grid>

        <Grid Grid.Row="2" Padding="3,0,0,0" RowSpacing="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="5,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.Resources>
                    <Storyboard x:Name="VolumeStoryboard">
                        <DoubleAnimation 
                            x:Name="VolumeAnimation"
                            Storyboard.TargetName="BorderClippingCompositeTransform"
                            Storyboard.TargetProperty="ScaleX"
                            To="0"
                            Duration="0:0:0.1"/>
                    </Storyboard>
                </Grid.Resources>

                <Border 
                    x:Name="SystemVolumeActivityBorder"
                    Background="{ThemeResource SystemAccentColor}"
                    BorderBrush="{ThemeResource SystemAccentColor}"
                    CornerRadius="{StaticResource ControlCornerRadius}"
                    BorderThickness="1"
                    Opacity="1"
                    Grid.Row="1"
                    Height="6"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    SizeChanged="SystemVolumeActivityBorder_SizeChanged">
                    <Border.Clip>
                        <RectangleGeometry x:Name="SystemVolumeActivityBorderClipping" Rect="0 0 0 0">
                            <RectangleGeometry.Transform>
                                <CompositeTransform x:Name="BorderClippingCompositeTransform" ScaleX="0"/>
                            </RectangleGeometry.Transform>
                        </RectangleGeometry>
                    </Border.Clip>
                </Border>
                <Slider 
                    x:Name="SystemVolumeSlider"
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    ValueChanged="SystemVolumeSlider_ValueChanged"/>
            </Grid>

            <Border Height="1" Background="{ThemeResource SystemControlForegroundBaseLowBrush}" Grid.Row="1"/>

            <InfoBar x:Name="WindowInfoBar" Grid.Row="2"/>

            <ScrollViewer x:Name="AudioSessionsScrollViewer" Grid.Row="3">
                <GridView
                    x:Name="AudioSessionsPanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Stretch"
                    SelectionMode="None"
                    CanReorderItems="True"
                    AllowDrop="True"
                    Loading="AudioSessionsPanel_Loading"
                    Loaded="OnLoaded">
                    <GridView.ItemContainerTransitions>
                        <TransitionCollection>
                            <PopupThemeTransition FromHorizontalOffset="200"/>
                        </TransitionCollection>
                    </GridView.ItemContainerTransitions>

                    <GridView.Resources>
                        <Style TargetType="snd_vol:AudioSessionView">
                            <Setter x:Name="AudioSessionViewHeightSetter" Property="Height" Value="250"/>
                        </Style>
                    </GridView.Resources>
                </GridView>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
