<Window
    x:Class="SND_Vol.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:snd_vol="using:SND_Vol"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid" Background="{ThemeResource SolidBackgroundFillColorSecondary}" SizeChanged="Grid_SizeChanged">
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition x:Name="RightPaddingColumn" Width="40"/>
            </Grid.ColumnDefinitions>

            <TextBlock 
                Text="{x:Bind Title}" 
                Style="{StaticResource CaptionTextBlockStyle}" 
                Opacity="0.6"
                VerticalAlignment="Center"
                Margin="10,0,0,0"/>
        </Grid>

        <InfoBar x:Name="WindowInfoBar" Grid.Row="1"/>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ScrollViewer x:Name="ContentScrollViewer" VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Visible" Grid.Row="2">
                <Grid
                    x:Name="AudioSessionsPanel"
                    ColumnSpacing="5"
                    Margin="7,10,7,7"
                    Loading="AudioSessionsPanel_Loading"
                    Loaded="OnLoaded">
                    <Grid.ChildrenTransitions>
                        <TransitionCollection>
                            <PopupThemeTransition FromHorizontalOffset="200"/>
                        </TransitionCollection>
                    </Grid.ChildrenTransitions>
                </Grid>
            </ScrollViewer>

            <Border Height="1" Background="{ThemeResource SystemControlForegroundBaseLowBrush}" Grid.Row="1"/>

            <Border 
                x:Name="SystemVolumeActivityBorder"
                Background="{ThemeResource SystemAccentColor}"
                BorderBrush="{ThemeResource SystemAccentColor}"
                BorderThickness="1"
                CornerRadius="{StaticResource ControlCornerRadius}"
                Opacity="1"
                Grid.Row="0"
                Margin="15,0,15,0"
                Height="6"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                Scale="0,1,1">
                <Border.ScaleTransition>
                    <Vector3Transition Duration="0:0:0.1" Components="X"/>
                </Border.ScaleTransition>
            </Border>
            <Slider 
                x:Name="SystemVolumeSlider"
                Grid.Row="0" 
                Margin="15,0,15,0"
                VerticalAlignment="Center"
                ValueChanged="SystemVolumeSlider_ValueChanged"/>
        </Grid>
    </Grid>
</Window>
