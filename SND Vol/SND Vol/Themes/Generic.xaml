    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SND_Vol">

    <FontFamily x:Key="KeyFontFamily">Arial</FontFamily>
    <x:Double x:Key="FontIconViewBoxHeight">16</x:Double>

    <Style x:Key="KeyIconGridStyle" TargetType="Grid">
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="BorderBrush" Value="{ThemeResource ApplicationForegroundThemeBrush}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="2"/>
        <Setter Property="Padding" Value="7,4" />
    </Style>

    <Style x:Key="KeyIconTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource KeyFontFamily}" />
        <Setter Property="FontWeight" Value="Light" />
    </Style>
    
    <Style x:Key="NoneKeyIcon" TargetType="local:KeyIcon" >
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:KeyIcon">
                    <FontIcon Glyph="&#xe711;"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

