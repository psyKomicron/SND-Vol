                            <FontIcon Glyph="&#xe962;"/>
                        </Viewbox>
                        <Border 
                            Background="{ThemeResource AccentFillColorDefaultBrush}" 
                            Width="7" 
                            Height="10" 
                            Translation="-6,-8,0"
                            CornerRadius="4,0,0,0"
                            HorizontalAlignment="Center"/>
